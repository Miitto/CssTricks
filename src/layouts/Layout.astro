---
interface Props {
    title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Astro description"
        />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1"
        />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/CssTricks/favicon.svg"
        />
        <meta
            name="generator"
            content={Astro.generator}
        />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>

    <style>
        html {
            font-family: system-ui, sans-serif;
            background: #13151a;
            color: #e6e6e6;
            width: 100%;
            height: 100%;
        }

        body {
            height: 100%;
            width: 100%;
        }
    </style>
    <style is:global lang="scss">
        :root {
            --accent: 136, 58, 234;
            --accent-light: 224, 204, 250;
            --accent-dark: 49, 10, 101;
            --accent-gradient: linear-gradient(
                45deg,
                rgb(var(--accent)),
                rgb(var(--accent-light)) 30%,
                white 60%
            );
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            min-width: 0;
        }

        code {
            font-family:
                Menlo,
                Monaco,
                Lucida Console,
                Liberation Mono,
                DejaVu Sans Mono,
                Bitstream Vera Sans Mono,
                Courier New,
                monospace;
            tab-size: 4;
        }

        .example {
            background: #1e1e1e;
            padding: 1rem;
            border: 1px solid #5555;
            border-radius: 0.5rem;
            overflow: hidden;
        }

        a:visited {
            color: rgb(var(--accent-light));
        }

        pre {
            font-size: 0.85em;
            width: fit-content;
            line-height: 1.5;
            max-width: 100%;

            &.has-diff {
                padding-left: 24px;

                code .line {
                    padding-left: 24px;
                    margin-left: -24px;
                    width: calc(100% + 24px);
                    position: relative;
                }
            }

            code {
                min-width: 100%;
                display: block;
                padding: 0;

                .line {
                    padding-inline: 0.5em;
                }
            }
        }
        code {
            width: fit-content;
            padding: 0.2em 0.25em;

            .line {
                display: inline-block;
                padding: 1px 0.2em;
            }

            .diff::before {
                position: absolute;
                left: 10px;
            }

            .add {
                background-color: rgba(16, 185, 129, 0.16);
                &::before {
                    content: "+";
                }
            }

            .remove {
                &::before {
                    content: "-";
                }
                background-color: rgba(244, 63, 94, 0.16);
            }
        }
    </style>
</html>
