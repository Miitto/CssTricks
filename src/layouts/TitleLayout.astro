---
import Layout from "./Layout.astro";

interface Props {
    title: string;
    columns?: number;
}

const { title, columns = 2 } = Astro.props;
---

<Layout title={title}>
    <main>
        <div>
            <slot name="title" />
            <slot name="description" />
        </div>
        <div>
            <slot />
        </div>
    </main>
</Layout>

<style lang="scss" define:vars={{ columns }}>
    main {
        display: flex;
        gap: 1rem;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
        height: 100%;
        width: 100%;

        > div:first-child {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            align-items: center;
            justify-content: center;
            flex: 1;
            max-width: 35%;
        }

        > div:last-child {
            flex: 2;
            max-height: 55%;
            display: grid;
            align-content: start;
            grid-template-columns: repeat(
                min(var(--columns), var(--max-columns, 10)),
                1fr
            );
            place-items: center;
            gap: 2em;
            border: none;
            padding-inline: 1em;

            @media screen and (max-width: 400px) {
                --max-columns: 1;
            }
            @media screen and (max-width: 800px) {
                --max-columns: 2;
            }

            :global(a) {
                width: 100%;
                text-decoration: none;
            }

            :global(a:hover h2) {
                text-decoration: underline;
            }
        }
    }

    :global(.card) {
        padding: 2em;
        border-radius: 0.5em;
        background-color: #1b1c22;
        border: 2px solid #5555;
        color: white;
        width: 100%;
        height: 100%;

        h2 {
            padding: 0;
            text-decoration: dashed underline;
        }
        &:hover h2 {
            text-decoration: solid underline;
        }
    }
</style>
