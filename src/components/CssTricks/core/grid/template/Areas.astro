---
import { Code } from "astro:components";
import { parentBg, childBg } from "../../../../colors";
---

<h4 id="grid-template-areas">Areas</h4>
<div>
    <hr />
    <p>
        <Code
            code="grid-template-areas"
            lang="css"
            inline
        /> allows for the grid to have set named areas. The grid is defined by a
        string of names separated by whitespace, with each name representing a cell
        in the grid. The names are then used to place elements in the grid using
        the <Code
            code="grid-area"
            lang="css"
            inline
        /> property.
    </p>
    <div class="inline">
        <Code
            code={`.grid {\n\tdisplay: grid;\n\tgrid-template-areas: "sidebar header"\n\t\t\t     "sidebar content";\n\tgrid-template-columns: 1fr 2fr;\n}\n.sidebar {\n\tgrid-area: sidebar;\n\tbackground-color: maroon;\n}\n.header {\n\tgrid-area: header;\n\tbackground-color: darkgreen;\n}\n.content {\n\tgrid-area: content;\n\tbackground-color: darkblue;\n}`}
            lang="css"
        />
        <iframe
            title="Grid Template Columns"
            srcdoc=`<head><style>* {padding: 0; margin: 0; box-sizing: border-box; color: white;}body {margin: 0; width: 100vw; height: 100vh; }div { background-color: ${parentBg}; grid-template-columns: 1fr 2fr; width: 100%; height: 100%; display: grid; grid-template-areas: "sidebar header" "sidebar content";  padding: 5px; overflow: hidden;} div div {
						background-color: ${childBg}; border: 2px solid magenta; width: 100%; height: 100%; display: flex; justify-content: center; align-items: center;}
                    .sidebar {
	grid-area: sidebar;
	background-color: maroon;
}
.header {
	grid-area: header;
	background-color: darkgreen;
}
.content {
	grid-area: content;
	background-color: darkblue;
}</style></head><body> <div>
							<div class="sidebar">Sidebar</div><div class="header">Header</div><div class="content">Content</div> </div> </body>`
        >
        </iframe>
    </div>
</div>
