---
import Layout from "../layouts/Layout.astro";
import Basic from "../components/core/basic/Basic.astro";
import Flex from "../components/core/flex/Flex.astro";
import Grid from "../components/core/grid/Grid.astro";

import { core } from "../sections";
---

<Layout
    title="Core"
    sections={core}
>
    <main>
        <Basic />
        <Flex />
        <Grid />
    </main>
</Layout>

<style lang="scss">
    main {
        padding: 1em;
        width: 100%;
        max-width: 100%;
        color: white;
        font-size: 20px;
        line-height: 1.6;
        overflow-y: auto;
        height: auto;
        max-height: 100vh;

        @media screen and (max-width: 768px) {
            padding: 0.5em;
        }
    }
</style>

<style is:global lang="scss">
    .core {
        color: transparent !important;
        background: linear-gradient(
            90deg,
            rgb(var(--accent)),
            rgb(var(--accent-light)) 60%,
            white 98%
        );
        background-clip: text;
        -webkit-background-clip: text;
    }
</style>
